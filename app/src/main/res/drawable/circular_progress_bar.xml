<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background ring -->
    <item>
        <shape
            android:shape="ring"
            android:useLevel="false">
            <solid android:color="@color/white" />
            <size
                android:width="8dp"
                android:height="8dp" />
        </shape>
    </item>
    <!-- Progress ring -->
    <item>
        <shape
            android:shape="ring"
            android:useLevel="true">
            <solid android:color="@color/buttonScanColor" />
            <size
                android:width="8dp"
                android:height="8dp" />
        </shape>
    </item>
</layer-list>

